{
  system.defaults.dock = {
    # autohide dock instantly
    autohide = true;
    autohide-delay = 0.0;
    autohide-time-modifier = 0.0;

    # position dock at bottom
    orientation = "bottom";

    # dock icon size
    tilesize = 36;

    # show running apps
    static-only = false;

    # disable recent apps
    show-recents = false;

    # show hidden apps
    showhidden = false;

    # disable recent spaces
    mru-spaces = false;

    # hot corners
    #  1: Disabled
    #  2: Mission Control
    #  3: Application Windows
    #  4: Desktop
    #  5: Start Screen Saver
    #  6: Disable Screen Saver
    #  7: Dashboard
    #  10: Put Display to Sleep
    #  11: Launchpad
    #  12: Notification Centre
    #  13: Lock Screen
    #  14: Quick Note
    wvous-bl-corner = 3;
    wvous-br-corner = 5;
    wvous-tl-corner = 2;
    wvous-tr-corner = 2;
  };
}
